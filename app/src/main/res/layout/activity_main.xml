<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="TODO"
        tools:layout_constraintBottom_toBottomOf="@id/barrier"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@sample/posts_avatar" />

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin"
        android:ellipsize="end"
        android:maxLines="1"
        tools:layout_constraintBottom_toTopOf="@id/published"
        tools:layout_constraintEnd_toStartOf="@id/menu"
        tools:layout_constraintStart_toEndOf="@id/avatar"
        tools:layout_constraintTop_toTopOf="@id/avatar"
        tools:layout_constraintVertical_chainStyle="packed"
        tools:text="@sample/posts.json/data/author" />

    <TextView
        android:id="@+id/published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin"
        tools:layout_constraintBottom_toBottomOf="@id/avatar"
        tools:layout_constraintStart_toEndOf="@id/avatar"
        tools:layout_constraintTop_toBottomOf="@id/author"
        tools:text="@sample/posts.json/data/published" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_more_vert_24" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        tools:constraint_referenced_ids="avatar, published, menu" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/common_margin"
        tools:layout_constraintTop_toBottomOf="@id/barrier"
        tools:text="@sample/posts.json/data/content" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/lower_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:barrierDirection="bottom"
        tools:constraint_referenced_ids="content" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        app:srcCompat="@android:drawable/btn_star"

        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toBottomOf="@id/lower_barrier" />

    <EditText
        android:id="@+id/number_of_likes"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="3"
        android:gravity="start"
        android:inputType="number"
        android:minWidth="48dp"
        app:layout_constraintBottom_toBottomOf="@id/like"
        tools:layout_constraintStart_toEndOf="@id/like"
        tools:layout_constraintTop_toTopOf="@id/like"
        tools:text="10" />


    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        app:srcCompat="@android:drawable/ic_menu_share"
        tools:layout_constraintStart_toEndOf="@id/number_of_likes"
        tools:layout_constraintTop_toBottomOf="@id/lower_barrier" />

    <EditText
        android:id="@+id/number_of_shares"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="3"
        android:gravity="start"
        android:inputType="number"
        android:minWidth="48dp"
        app:layout_constraintBottom_toBottomOf="@id/share"
        tools:layout_constraintStart_toEndOf="@id/share"
        tools:layout_constraintTop_toTopOf="@id/share"
        tools:text="5"

        />

    <ImageView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        app:layout_constraintEnd_toStartOf="@id/number_of_views"
        app:srcCompat="@android:drawable/ic_menu_view"
        tools:layout_constraintTop_toBottomOf="@id/lower_barrier" />

    <EditText
        android:id="@+id/number_of_views"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="3"
        android:gravity="start"
        android:inputType="number"
        android:minWidth="48dp"
        app:layout_constraintBottom_toBottomOf="@id/views"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_toTopOf="@id/views"
        tools:text="10"


        />


</androidx.constraintlayout.widget.ConstraintLayout>